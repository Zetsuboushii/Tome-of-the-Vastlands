---
layout: none
---
[
{% for enemy in site.entries %}
{% if enemy.categories contains "bestiary" %}
{% if counter > 0 %},{% endif %}
{
    "name": "{{ enemy.title }}",
    "boss": {% if enemy.boss %}true{% else %}false{% endif %},
    "bosstitle": "{{ enemy.bosstitle }}",
    "type": "{{ enemy.type }}",
    "hp": {{ enemy.hp }},
    "ac": {{ enemy.ac }},
    "movement": [
      {% for move in enemy.move %}
      "{{ move }}"{% unless forloop.last %},{% endunless %}
      {% endfor %}
    ],
    "str": {{ enemy.str }},
    "dex": {{ enemy.dex }},
    "con": {{ enemy.con }},
    "int": {{ enemy.int }},
    "wis": {{ enemy.wis }},
    "cha": {{ enemy.cha }},
    "weaknesses": [
      {% for weakness in enemy.weak %}
      "{{ weakness }}"{% unless forloop.last %},{% endunless %}
      {% endfor %}
    ],
    "resistances": [
      {% for resistance in enemy.res %}
      "{{ resistance }}"{% unless forloop.last %},{% endunless %}
      {% endfor %}
    ],
    "immunities": [
      {% for immunity in enemy.imm %}
      "{{ immunity }}"{% unless forloop.last %},{% endunless %}
      {% endfor %}
    ],
    "actions": [
      {% for action in enemy.actions %}
      "{{ action }}"{% unless forloop.last %},{% endunless %}
      {% endfor %}
    ],
    "class": "{{ enemy.class }}",
    "subclasses": [
      {% for subclass in enemy.subclasses %}
      "{{ subclass }}"{% unless forloop.last %},{% endunless %}
      {% endfor %}
    ],
    "masterclass": "{{ enemy.masterclass }}",
    "homes": [
      {% for home in enemy.homes %}
      "{{ home }}"{% unless forloop.last %},{% endunless %}
      {% endfor %}
    ],
    "alignment": "{{ enemy.alignment }}",
    "status": "{{ enemy.alive }}",
    "relationships": [
      {% for relation in enemy.relationships | split: ',' %}
      ["{{ relation[0] }}", "{{ relation[1] }}"]{% unless forloop.last %},{% endunless %}
      {% endfor %}
    ],
    "lover": "{{ enemy.lover }}"
}{% assign counter = counter | plus: 1 %}
{% endif %}
{% endfor %}
]