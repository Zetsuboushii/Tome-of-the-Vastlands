---
layout: none
---
[
{% assign counter = 0 %}
{% for character in site.entries %}
{% if character.categories contains "character" %}
{% if counter > 0 %},{% endif %}
{
"name": "{{ character.title }}",
"surname": "{{ character.surname }}",
"title": "{{ character.character_title }}",
"race": "{{ character.race }}",
"sex": "{{ character.sex }}",
"birthday": "{{ character.birthday }}",
"aliases": [
{% for alias in character.alias %}
{
"alias": "{{ alias[0] }}",
"origin": "{{ alias[1] }}"
}{% unless forloop.last %},{% endunless %}
{% endfor %}
],
"measurements": {
{% if character.height %}"height": {{character.height}},{% endif %}
{% if character.weight %}"weight": {{character.weight }},{% endif %}
{% if character.bust %}"bust": {{character.bust}},{% endif %}
{% if character.underbust %}"underbust": {{character.underbust }},{% endif %}
{% if character.waist %}"waist": {{character.waist}},{% endif %}
{% if character.hip %}"hip": {{character.hip }},{% endif %}
{% if character.shoulder_width %}"shoulder_width": {{character.shoulder_width}},{% endif %}
{% if character.muscle_mass %}"muscle_mass": {{character.muscle_mass }}{% endif %}
},
"functions": [
{% for function in character.functions %}
"{{ function }}"{% unless forloop.last %},{% endunless %}
{% endfor %}
],
"classes": {
"baseclass": "{{ character.class }}",
{% if character.subclasses %}
"subclasses": [
{% for subclass in character.subclasses %}
"{{ subclass }}"{% unless forloop.last %},{% endunless %}
{% endfor %}
],{% endif %}
{% if character.masterclass %}"masterclass": "{{ character.masterclass }}"{% endif %}
},
"nationality": "Faergria",
"homes": [
{% for home in character.homes %}
{
"place": "{{ home }}",
"attachment": "Geburtsort"
}{% unless forloop.last %},{% endunless %}
{% endfor %}
],
"alignment": "{{ character.alignment }}",
"affiliations": [
{% for affiliation in character.affiliations %}
"{{ affiliation }}"{% unless forloop.last %},{% endunless %}
{% endfor %}
],
"likes": [
{% for like in character.likes %}
"{{ like }}"{% unless forloop.last %},{% endunless %}
{% endfor %}
],
"dislikes": [
{% for dislike in character.dislikes %}
"{{ dislike }}"{% unless forloop.last %},{% endunless %}
{% endfor %}
],
"status": "{{ character.alive }}",
"relationships": [
{% for relation in character.relationships %}
{
"character": "{{ relation[0] }}",
"relation": "{{ relation[1] }}"
}{% unless forloop.last %},{% endunless %}
{% endfor %}
],
"lover": "{{ character.lover }}",
"alt_images": [
{% for img in character.alt_imgs %}
"{{ img | downcase }}"{% unless forloop.last %},{% endunless %}
{% endfor %}
],
{% assign content_parts = character.content | split: '<h2' %}
{% assign excerpt = character.excerpt | replace: "\r\n", " " | replace: "\r", " " | replace: "\n", " " %}
"content": {
"excerpt": "{{ excerpt | strip_html | strip }}",
"sections": [
{% for part in content_parts offset: 1 %}
{% assign section_title = part | split: '</h2' | first | split: '>' | last | strip_html | strip %}
{% assign section_content = part | split: '</h2>' | last | split: '</h2>' | first | strip_html | strip | replace: "\r\n", " " | replace: "\n\r", " " | replace: "\r", " " | replace: "\n", " " %}
{
"title": "{{ section_title }}",
"text": "{{ section_content }}"
}{% unless forloop.last %},{% endunless %}
{% endfor %}
]
}
}{% assign counter = counter | plus: 1 %}
{% endif %}
{% endfor %}
]